<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6 offset-3">
    <div class="alert alert-danger" role="alert">
      <h2 class="alert-heading text-center"><%= err.message %></h2>
      <h2 class="text-center mb-0"><%= err.statusCode %></h2>
      <% if (process.env.NODE_ENV !== 'production') { %>
      <p class="text-center mt-2"><%=err.stack%></p>
      <% } %>
    </div>
  </div>
</div>
